    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url(<%= asset_path @blog.bghome %>)">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1><%= @blog.title %></h1>
                        <hr class="small">
                        <span class="subheading"><%= @blog.subtitle %></span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <% @posts.each do |post| %>
                    <div class="post-preview">
                        <a href="<%= post_path(post.id) %>">
                            <h2 class="post-title">
                                <%= post.title %>
                            </h2>
                            <h3 class="post-subtitle">
                                <%= post.subtitle %>
                            </h3>
                        </a>
                        <p class="post-meta">Postado por <a href="#"><%= post.user.name %></a> em <%= post.created_at %></p>
                    </div>
                    <hr>
                <% end %>
            </div>
        </div>
    </div>
